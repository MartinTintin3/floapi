{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "lib",
		"declaration": true,
		"emitDeclarationOnly": false,
		"declarationMap": true,
		"sourceMap": true,
		"target": "es2015",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": true,
	},
	"include": ["lib/**/*"],
	"exclude": ["node_modules", "dist"],
	"tsc-alias": {
		"resolveFullPaths": true,
	}
}